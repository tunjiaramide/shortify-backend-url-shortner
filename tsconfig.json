{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "NodeNext",
    "esModuleInterop": true, 
    "moduleResolution": "NodeNext",                             
    "forceConsistentCasingInFileNames": true, 
    "strict": true,            
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "./src"                            
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
